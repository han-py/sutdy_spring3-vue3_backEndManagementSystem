<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot3.mapper.DeptMapper">

    <insert id="insert" parameterType="com.example.springboot3.entity.Dept">
        insert into dept(name)
        values(#{name}) <!-- 绑值时要用驼峰的写法 -->
    </insert>

    <update id="updateById" parameterType="com.example.springboot3.entity.Dept">
        update dept
        set name = #{name}
        where id = #{id}

    </update>

    <select id="selectAll" resultType="com.example.springboot3.entity.Dept">
        select * from dept
        <where>
            <if test="name != null">
                and name like concat('%', #{name}, '%')  <!-- 全模糊查询 -->
            </if>
        </where>
        order by id desc
    </select>

</mapper>