<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot3.mapper.EmployeeMapper">

    <insert id="insert" parameterType="com.example.springboot3.entity.Employee">
        insert into employee(username,password,role,name,sex,no,age,description,department_id)
        values(#{username},#{password},#{role},#{name},#{sex},#{no},#{age},#{description},#{departmentId}) <!-- 绑值时要用驼峰的写法 -->
    </insert>

    <update id="updateById" parameterType="com.example.springboot3.entity.Employee">
        update employee
        set username = #{username},
            name = #{name},
            sex = #{sex},
            no = #{no},
            age = #{age},
            description = #{description},
            department_id = #{departmentId}
        where id = #{id}

    </update>

    <select id="selectAll" resultType="com.example.springboot3.entity.Employee">
        select * from employee
        <where>
            <if test="name != null">
                and name like concat('%', #{name}, '%')  <!-- 全模糊查询 -->
            </if>
        </where>
        order by id desc
    </select>
    <select id="selectByUsername" resultType="com.example.springboot3.entity.Employee">
        select * from employee
        <where>
            <if test="username != null">
                and username = #{username}
            </if>
        </where>
    </select>

</mapper>